@inject UserManager<UserEntity> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}

@if (user != null)
{
    <div class="acc-profileinfo">
        <img src="~/images/profiles/@user.ProfileImage" alt="@user.FirstName @user.LastName" />

        <form enctype="multipart/form-data" method="post" asp-action="UploadProfileImage" asp-controller="Account">
            <input id="fileUploader" type="file" name="file" hidden/>
            <label for="fileUploader" id="acc-btn-1" class="btn-white-s"><i class="fa-solid fa-arrows-rotate"></i></label>
        </form>

        
        <h4>@user.FirstName @user.LastName</h4>
        <p>@user.Email</p>
    </div>

    <div class="acc-btns-details">
        <button asp-action="Details" asp-controller="Account" class="btn-purple-s"><i class="fa-solid fa-gear"></i> Account Details</button>
        <button asp-action="SignOut" asp-controller="Auth" class="btn-white-s"><i class="fa-solid fa-arrow-right-from-bracket"></i> Sign Out</button>  
    </div>
}





