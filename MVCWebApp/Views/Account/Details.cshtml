@model AccountDetailsViewModel
@{
	ViewData["Title"] = "Account Details";
}
<div class="wrapper">
    <header>
        <div class="container">
            <div class="siliconlogo">
                <a asp-action="Home" asp-controller="Default">
                    <img src="~/images/solid.svg" alt="silicon logo">
                </a>
            </div>
            <div class="menu">
                <nav>
                    <a href="#">Overview</a>
                    <a asp-action="Index" asp-controller="Courses">Courses</a>
                    <a href="#">Contact</a>
                </nav>
            </div>
            <div class="switch">
                <p class="lightswitch">Light</p>
                <label>
                    <input type="checkbox">
                    <span class="sliderround"></span>
                </label>
                <p class="darkswitch">Dark</p>
            </div>
            <a id="profilepic" asp-action="Details" asp-controller="Account"><img src="~/images/profiles/profilepic.svg" alt="profile picture"></a>
        </div>
    </header>


    <main>
        <div class="container">

            <aside class="account-profile">
                <partial name="~/Views/Account/_AccountProfile.cshtml" />
            </aside>

            @if (!string.IsNullOrEmpty(TempData["StatusMessage"]?.ToString()))
            {
                @TempData["StatusMessage"]
            }

            <div class="account-details">
                <h2>Account Details</h2>

                <form method="post" asp-action="UpdateBasicInfo" asp-controller="Account">
                    <div class="basic-info">
                        <h6>Basic Info</h6>
                        <div class="form-details">
                            <div>
                                <p>First name</p>
                                <input asp-for="Basic!.FirstName">
                                <span asp-validation-for="Basic!.FirstName"></span>
                            </div>
                            <div>
                                <p>Last name</p>
                                <input asp-for="Basic!.LastName">
                                <span asp-validation-for="Basic!.LastName"></span>
                            </div>
                            <div class="formpositioning">
                                <p>Email address</p>
                                <input asp-for="Basic!.Email">
                                <span asp-validation-for="Basic!.Email"></span>
                            </div>
                            <div class="formpositioning">
                                <p>Phone</p>
                                <input asp-for="Basic!.PhoneNumber">
                            </div>
                            <div class="formpositioning2">
                                <p>Bio</p>
                                <p id="optional-text">(optional)</p>
                                <textarea asp-for="Basic!.Bio"></textarea>
                            </div>
                        </div>
                        <div class="acc-buttons">
                            <button type="reset" class="btn-white-s">Cancel</button>
                            <button type="submit" class="btn-purple-s">Save changes</button>
                        </div>
                    </div>
                </form>

                <form method="post" asp-action="UpdateAddressInfo" asp-controller="Account">
                    <div class="acc-address">
                        <h6>Address</h6>
                        <div>
                            <p>Address line 1</p>
                            <input class="address-input" asp-for="Address!.AddressLine_1">
                            <span asp-validation-for="Address!.AddressLine_1"></span>
                        </div>
                        <div class="addresspadding">
                            <p>Address line 2</p>
                            <p id="optional-text">(optional)</p>
                            <input class="address-input" asp-for="Address!.AddressLine_2">
                            <span asp-validation-for="Address!.AddressLine_2"></span>
                        </div>
                        <div class="form-details2">
                            <div>
                                <p>Postal code</p>
                                <input asp-for="Address!.PostalCode">
                                <span asp-validation-for="Address!.PostalCode"></span>
                            </div>
                            <div>
                                <p>City</p>
                                <input asp-for="Address!.City">
                                <span asp-validation-for="Address!.City"></span>
                            </div>
                        </div>
                        <div class="acc-buttons">
                            <button type="reset" class="btn-white-s">Cancel</button>
                            <button type="submit" class="btn-purple-s">Save changes</button>
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </main>

    @await Html.PartialAsync("_ValidationScriptPartial")


    <footer>
        <div class="container">
            <div class="socialmedias">
                <a href=#><i class="fa-brands fa-square-facebook"></i></a>
                <a href=#><i class="fa-brands fa-square-x-twitter"></i></a>
                <a href=#><i class="fa-brands fa-square-instagram"></i></a>
                <a href=#><i class="fa-brands fa-youtube"></i></a>
            </div>
            <p>© 2024 Silicon. All rights reserved. Pulvinar urna condimentum amet tempor, ornare integer. Lorem odio justo malesuada suspendisse</p>
            <p class="footerrights">viverra aliquet quisque turpis non. Feugiat in odio non nunc ornare consectetur.</p>
        </div>
    </footer>
</div>