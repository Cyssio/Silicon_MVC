@model CourseIndexViewModel
@{
	ViewData["Title"] = "Courses";
}

<div class="wrapper">
    <header>
        <div class="container">
            <div class="siliconlogo">
                <a asp-action="Home" asp-controller="Default">
                    <img src="~/images/solid.svg" alt="silicon logo">
                </a>
            </div>
            <div class="menu">
                <nav>
                    <a href="#">Overview</a>
                    <a asp-action="Index" asp-controller="Courses">Courses</a>
                    <a href="#">Contact</a>
                </nav>
            </div>
            <div class="switch">
                <p class="lightswitch">Light</p>
                <label>
                    <input type="checkbox">
                    <span class="sliderround"></span>
                </label>
                <p class="darkswitch">Dark</p>
            </div>
            <a id="profilepic" asp-action="Details" asp-controller="Account"><img src="~/images/profiles/profilepic.svg" alt="profile picture"></a>
        </div>
    </header>


