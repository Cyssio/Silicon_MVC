            <div class="container">
                <p><a class="homenav" asp-action="Home" asp-controller="Default"><i class="fa-solid fa-house"></i> Home</a> <i id="arrowsright" class="fa-solid fa-angles-right"></i> <a class="coursesnav" asp-action="Index" asp-controller="Courses">Courses</a></p>
                <div class="courseshead">
                    <h2>Courses</h2>
                    <div class="courseheadinfo">
                        <input class="categorycourse" type="text" placeholder="All categories">
                        <i class="fa-solid fa-chevron-down"></i>
                    </div>
                    <div class="courseheadinfo">
                        <input class="searchcourse" type="text" placeholder="Search courses">
                        <i id="magglas" class="fa-solid fa-magnifying-glass"></i>
                    </div>
                </div>
            </div>
        </section>

